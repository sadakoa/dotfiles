{
	  "indent" : 2,      // インデント
	  "camelcase":true,  // キャメルケース
		"maxlen" : 140,     // 一行の最大文字数
		"unused" : true,   // 宣言のみで使用していない変数を検出
		"eqeqeq":true,     // ==、!=の使用禁止
		"noempty":true,   // 空のブロックがある場合に警告を出す
		"undef":true, //明示的に宣言されていない変数の使用を禁止
    "trailing":true,  //行末の空白を禁止
		"latedef":true, //変数を定義する前に使うのを禁止



		"undef" : true,    // グローバル変数へのアクセスを禁止
		"browser" : true,  // ブラウザ用のやつは許可
    "dojo" :  true,  // dojo tool kit用のやつは許可
    "debug"   : true,  // debugger を許可
		"devel" : true,     // console、alertを許可
}
